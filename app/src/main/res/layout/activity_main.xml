<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/1"
    android:padding="16dp"
    android:gravity="center">

    <!-- Header Title with Black Border and Elevation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Payment App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#333333"
        android:background="@drawable/text_border" <!-- Set border drawable as background -->
    android:elevation="4dp" <!-- Adds elevation effect -->
    android:padding="8dp" /> <!-- Padding to prevent text from touching border -->

    <!-- Card View for Payment Summary -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Payment Amount"
                android:textSize="18sp"
                android:textColor="#555555" />

            <EditText
                android:id="@+id/amountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="e.g., 500"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:backgroundTint="#3399cc"
                android:textColor="#333333" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Proceed to Pay"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3399cc"
                android:padding="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
